{
  "manifest_version": 2,
  "name": "lexi",
  "description": "Records difficult passages in texts and simplifies them.",
  "version": "0.1",
  "default_locale": "da",
  "icons": {
      "16": "img/l16.png",
      "48": "img/lexi48.png",
      "128": "img/lexi128.png"
  },
  "background": {
    "scripts": ["global_vars.js", "scripts/require.js", "scripts/background.js", "scripts/md5.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/l.png",
    "default_title": "Launch lexi extension."
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["lexi.css"]
      ,"js": ["global_vars.js", "scripts/md5.js", "scripts/i18n.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "tabs",
    "notifications",
    "contextMenus"
//    "http://*",
//    "https://*",
//    "chrome-devtools://*"
  ],
  "content_security_policy":"script-src 'self'; object-src 'self'",
  "web_accessible_resources": ["img/*png"]
}