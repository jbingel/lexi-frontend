{
  "manifest_version": 2,

  "name": "EZRead",
  "description": "Records difficult passages in texts and simplifies them.",
  "version": "0.1",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Launch EZRead extension."
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["ezread.css"]
//      "js": ["user_management.js", "util.js", "smplfy.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy":"script-src 'self'; object-src 'self'"
}